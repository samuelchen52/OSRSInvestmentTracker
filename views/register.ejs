<% include ./partials/header.ejs %>

<div class = "container-fluid">
	<div class = "row">
		<div class = "col-3" id = "optionContainer"> 
			
		</div>
		<div class = "col-6" id = "mainContainer">
			<div class = "invisible">
				invisible
			</div>
			<h5 class = "border-bottom">
				Register
			</h5>
			<form action = "/register" method = "POST">
				<div class="form-group">
					<input name = "username" class="form-control" type = "text" placeholder="Username" style = "width: 30%" required>
			  </div>
			  <div class="form-group">
					<input name = "password" class="form-control" type = "password" placeholder="Password" style = "width: 30%" required>
			  </div>
			  <div class="form-group">
					<% if (message !== null) {%>
						<div class = "<%=textColor%> pl-1"> <%=message%> </div>
					<% } %>
			  </div>
				<button class = "my-3 d-block btn btn-primary" type = "submit"> Register </button>
			</form>
			<h4> Already a user? <a href = "/login">Login!</a></h4>
		</div>
		<div class = "col-3" id = "investmentContainer">
			
		</div>
	</div>
</div>

<script>
	$( window ).on( "load", function() {
		$("#footer").css({
			position: "fixed",
		  left: 0,
		  bottom: 0,
		})
	}); 
</script>

<% include ./partials/footer.ejs %>
